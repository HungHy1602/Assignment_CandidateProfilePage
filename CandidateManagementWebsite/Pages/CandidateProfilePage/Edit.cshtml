@page
@model CandidateManagementWebsite.Pages.CandidateProfilePage.EditModel
@{
    ViewData["Title"] = "Edit";
    String RoleID = HttpContext.Session.GetString("RoleID");
    if (RoleID != "1" && RoleID != "2")
    {
        Response.Redirect("/NotPermission");
    }
}

<div class="container mt-5">
    <h2 class="text-primary">Edit Candidate Profile</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="CandidateProfile.CandidateId" />

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.Fullname" class="form-label fw-bold"></label>
                    <input asp-for="CandidateProfile.Fullname" class="form-control" />
                    <span asp-validation-for="CandidateProfile.Fullname" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.Birthday" class="form-label fw-bold"></label>
                    <input asp-for="CandidateProfile.Birthday" class="form-control" type="date" />
                    <span asp-validation-for="CandidateProfile.Birthday" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.ProfileShortDescription" class="form-label fw-bold"></label>
                    <textarea asp-for="CandidateProfile.ProfileShortDescription" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="CandidateProfile.ProfileShortDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CandidateProfile.ProfileUrl" class="form-label"></label>
                    <input asp-for="CandidateProfile.ProfileUrl" class="form-control" type="text" />
                    <span asp-validation-for="CandidateProfile.ProfileUrl" class="text-danger"></span>
                </div>


                <div class="form-group mb-3">
                    <label asp-for="CandidateProfile.PostingId" class="form-label fw-bold"></label>
                    <select asp-for="CandidateProfile.PostingId" class="form-control" asp-items="ViewBag.PostingId"></select>
                    <span asp-validation-for="CandidateProfile.PostingId" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
